---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /*    Base colors    */
    --clr-base-txt: #eee;
    --clr-base-bg: #363636;

    /*    Primary color   */
    --clr-primary: #4e94bf;

    /*    Secondary color   */
    --clr-secondary: #3270a6;

    /*    Tertiary color   */
    --clr-tertiary: #8c6c6c;

    /*    Quaternary color   */
    --clr-quaternary: #f2c49b;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    width: 100vw;
    max-width: 100%;
    height: 100vh;
    color: var(--clr-base-txt);
    background: var(--clr-base-bg);
    scrollbar-color: var(--clr-quaternary) var(--clr-base-lt);
    scrollbar-width: 1em;
    scroll-behavior: smooth;
  }

  ::-webkit-scrollbar {
    width: 1em;
  }

  ::-webkit-scrollbar-thumb {
    background-color: var(--clr-quaternary);
  }

  ::-webkit-scrollbar-track {
    background: var(--clr-base-lt);
  }
</style>
