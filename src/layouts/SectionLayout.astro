---
export interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section class="main-section" id={id}>
  <slot />
</section>

<style is:global>
  .main-section {
    width: 100%;
    min-height: 100svh;
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .title-section {
    font-size: 3rem;
  }
</style>
