---
import IconLayout from "../../layouts/IconLayout.astro";
---

<script>
  const collapse = document.querySelector("nav > svg");

  const handleClick = () => {
    const changeState = new Event("changeCollapseState", {
      bubbles: true,
    });
    collapse.dispatchEvent(changeState);
  };

  collapse.addEventListener("click", handleClick);
</script>

<IconLayout collapse={true}>
  <path
    d="M3 7H21"
    stroke="currentColor"
    stroke-width="1.5"
    stroke-linecap="round"></path>
  <path
    opacity="0.5"
    d="M3 12H21"
    stroke="currentColor"
    stroke-width="1.5"
    stroke-linecap="round"></path>
  <path
    d="M3 17H21"
    stroke="currentColor"
    stroke-width="1.5"
    stroke-linecap="round"></path>
</IconLayout>
